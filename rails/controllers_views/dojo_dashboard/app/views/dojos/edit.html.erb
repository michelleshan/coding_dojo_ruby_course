<div class="container">
    <div class="row">
        <h1>Editing <%= @dojo.branch %></h1>
    </div>
    <div class="row">
        <form action='<%= dojo_path %>' method='POST'>
            <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
            <input type="hidden" name="_method" value="patch">
            <div class="col">
                <p><label for="dojo[branch]">Branch: </label></p>
                <p><label for="dojo[street]">Street: </label></p>
                <p><label for="dojo[city]">City: </label></p>
                <p><label for="dojo[state]">State: </label></p>
            </div>
            <div class="col">
                <p><input type="text" name='dojo[branch]' value='<%= @dojo.branch %>'></p>
                <p><input type="text" name='dojo[street]' value='<%= @dojo.street %>'></p>
                <p><input type="text" name='dojo[city]' value='<%= @dojo.city %>'></p>
                <p><input type="text" name='dojo[state]' value='<%= @dojo.state %>'></p>
                <button type='submit'>Update</button>
            </div>
        </form>
    </div>
    <div class="row">
        <%= link_to "Home", dojos_path %> | <%= link_to "Show", dojo_path %>
    </div>
</div>