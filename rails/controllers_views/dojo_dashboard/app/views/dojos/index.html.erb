<div class="container">
    <div class="row">
        <h1>Listing <%= @count %> Dojos</h1>
    </div>
    <div class="row">
        <table>
            <thead>
                <th>Coding Dojo Branch</th>
                <th>Street</th>
                <th>City</th>
                <th>State</th>
                <th>Actions</th>
            </thead>
            <tbody>
                <% @dojos.each do |dojo| %>
                <tr>
                    <td><%= dojo.branch %></td>
                    <td><%= dojo.street %></td>
                    <td><%= dojo.city %></td>
                    <td><%= dojo.state %></td>
                    <td>
                        <%= link_to "Show", dojo_path(dojo) %> |
                        <%= link_to "Edit", edit_dojo_path(dojo) %> |
                        <a href="/dojos/<%= dojo.id %>" data-method="delete">Destroy</a>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div class="row">
        <%= link_to "New Dojo", new_dojo_path %>
    </div>
</div>