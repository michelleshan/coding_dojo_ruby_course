<div class="container">
    <div class="row">
        <h1><%= @dojo.branch %></h1> <%= link_to "Edit Dojo", edit_dojo_path(@dojo) %>
        <p>Address: <%= @dojo.street %></p>
        <p>City: <%= @dojo.city %> State: <%= @dojo.state %></p>
    </div>
    <div class="row">
        <h2>Student Roster</h2>
        <table>
            <thead>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Actions</th>
            </thead>
            <tbody>
                <% @students.each do |student| %>
                <tr>
                    <td><%= student.first_name %></td>
                    <td><%= student.last_name %></td>
                    <td><%= student.email %></td>
                    <td>
                        <%= link_to "Show", dojo_student_path(@dojo, student) %> |
                        <%= link_to "Edit", edit_dojo_student_path(@dojo, student) %> |
                        <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>" data-method="delete"> Delete</a>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col">
            <%= link_to "Home", dojos_path %>
        </div>
        <div class="col">
            <%= link_to "Add Student", new_dojo_student_path %>
        </div>
    </div>
</div>