<%= content_for :left_column do %>
<div class="container">
    <div class="row">
        <h1>All Users</h1>
    </div>
    <div class="row">
        <table>
            <thead>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Favorite Language</th>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                <tr>
                    <td><%= user.first_name %></td>
                    <td><%= user.last_name %></td>
                    <td><%= user.favorite_language %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<% end %>

<%= content_for :right_column do %>
<div class="container">
    <div class="row">
        <h1>New User</h1>
    </div>
    <div class="row">
        <form action="/userss/create" method='POST'>
            <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
            <p><label for="user[first_name]">First Name</label></p>
            <p><input type="text" name='user[first_name]'></p>
            <p><label for="user[last_name]">Last Name</label></p>
            <p><input type="text" name='user[last_name]'></p>
            <p><label for="user[favorite_language]">Favorite Language</label></p>
            <p><input type="text" name='user[favorite_language]'></p>
            <button type='submit'>Submit</button>
        </form>
    </div>
    <div class="row">
        <a href="/posts" class='btn btn-primary'>All Posts</a>
    </div>
</div>
<% end %>